<Window x:Name="Input_Dialog_Window" x:Class="NanoTwitchLeafs.Windows.InputDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:NanoTwitchLeafs.Properties"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.Window_NanoDeviceInput_Title}" Height="98" Width="384.5" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox x:Name="inputDialog_TextBox" HorizontalAlignment="Center" Height="20" Margin="10,10,10,0" TextWrapping="Wrap" Text="New Nanoleaf Device" VerticalAlignment="Top" Width="347" VerticalContentAlignment="Center" />
        <TextBlock x:Name="inputDialog_Label" TextWrapping="Wrap" Text="{x:Static p:Resources.Window_NanoDeviceInput_Text}" HorizontalAlignment="Left" Margin="19,30,0,0" VerticalAlignment="Top" Width="259" Height="34" />
        <Button x:Name="inputDialog_Button" Content="{x:Static p:Resources.General_Button_OK}" HorizontalAlignment="Left" Margin="283,35,0,0" VerticalAlignment="Top" Width="75" Click="InputDialog_Button_Click" />
    </Grid>
</Window>